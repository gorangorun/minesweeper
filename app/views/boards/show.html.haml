.m-auto
  .mb-10
    .flex
      %span.font-semibold.pr-2 Board name:
      %span= @board.name
    .flex
      %span.font-semibold.pr-2 Email:
      %span= @board.email
  .flex{"data-controller" => "gameplay", "data-gameplay-url-value" => "#{boards_gameplay_url(@board)}"}
    %div{"data-gameplay-target" => "gameplay"}
      = render 'boards/partials/gameplay', board: @board
  .mt-10
    %h2.text-center Solution
    = draw_board(@board.board.solved_matrix)
